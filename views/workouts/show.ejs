<%- include('../partials/header.ejs') %>

<h1 class="workout-name"><%= workout.name %></h1>
<div class="workout-details-box">
  <p class="workout-reps">Reps: <%= workout.reps %></p>
  <p class="workout-weight">Weight: <%= workout.weight %></p>
  <p class="workout-created">Created on: <%= workout.createdAt ? workout.createdAt.toDateString() : 'Unknown' %></p>
</div>

<div class="button-group">
  <a href="/workouts" class="btn">Back to Workouts</a>
  <a href="/workouts/<%= workout._id %>/edit" class="btn">Edit</a>
  <form action="/workouts/<%= workout._id %>?_method=DELETE" method="POST" style="display: inline;">
    <button type="submit" class="btn">Delete Workout</button>
  </form>
</div>